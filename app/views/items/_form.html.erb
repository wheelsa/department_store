<h1><%= @item.id ? 'Edit Item' : 'Create Item' %></h1>
<hr />
<%= form_for [@department, @item] do |f| %>
 <%= f.label :name %>
 <%= f.text_field :name, required: true, autofocus: true %>
 <br />
 <%= f.label :quantity %>
 <%= f.text_area :quantity, required: true %>
  <%= f.label :description %>
 <%= f.text_area :description, required: true %>
 <%= f.submit %>
 <%end%>
